{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Houdini Launcher",
  "version": "1.0.0",
  "identifier": "com.houdini.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Houdini Launcher",
        "width": 1100,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "../icon/houdini_badge_flat.png",
      "iconAsTemplate": false,
      "tooltip": "Houdini Launcher",
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "You",
    "icon": [
      "../icon/houdini_badge_flat.png",
      "../icon/houdini_badge_flat.ico"
    ]
  }
}
